# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件标识
root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Web开发相关文件配置
[*.{js,jsx,ts,tsx,vue,css,scss,less,html,json}]
indent_style = space
indent_size = 2

# Markdown文件配置
[*.md]
trim_trailing_whitespace = false
